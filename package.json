{
  "name": "@trestleinc/bridge",
  "version": "0.0.1",
  "description": "Reactive data layer for schema-driven Cards, Procedures, and Deliverables",
  "repository": "https://github.com/trestleinc/bridge",
  "homepage": "https://github.com/trestleinc/bridge#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/bridge/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "bridge",
    "cards",
    "procedures",
    "deliverables",
    "reactive",
    "schema"
  ],
  "type": "module",
  "private": false,
  "resolutions": {
    "convex": "^1.31.0"
  },
  "overrides": {
    "convex": "^1.31.0"
  },
  "scripts": {
    "build": "oxlint --fix && tsdown",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/shared/index.d.ts",
        "default": "./dist/shared/index.js"
      }
    },
    "./package.json": "./package.json",
    "./client": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/client/index.d.ts",
        "default": "./dist/client/index.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/component/convex.config.d.ts",
        "default": "./dist/component/convex.config.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@effect/platform": "0.94.1",
    "@logtape/logtape": "1.3.5",
    "convex-helpers": "0.1.108",
    "effect": "3.19.14"
  },
  "peerDependencies": {
    "convex": "^1.32.2"
  },
  "devDependencies": {
    "@edge-runtime/vm": "5.0.0",
    "@microsoft/api-extractor": "7.55.2",
    "@tanstack/db": "0.5.16",
    "@trestleinc/convex-oxlint": "0.1.0",
    "@types/node": "25.0.3",
    "@types/sql.js": "1.4.9",
    "convex": "1.32.2",
    "dotenv": "17.2.3",
    "fake-indexeddb": "6.2.5",
    "lib0": "0.2.117",
    "oxlint": "1.36.0",
    "publint": "0.3.16",
    "tsdown": "0.19.0-beta.1",
    "typescript": "5.9.3",
    "yjs": "13.6.28",
    "zod": "4.3.4"
  },
  "main": "./dist/shared/index.js",
  "types": "./dist/shared/index.d.ts",
  "module": "./dist/shared/index.js",
  "publishConfig": {
    "access": "public"
  }
}
