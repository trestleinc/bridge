{
	"name": "@trestleinc/bridge",
	"version": "0.0.1",
	"private": false,
	"description": "Reactive data layer for schema-driven Cards, Procedures, and Deliverables",
	"keywords": [
		"bridge",
		"cards",
		"convex",
		"deliverables",
		"procedures",
		"reactive",
		"schema"
	],
	"homepage": "https://github.com/trestleinc/bridge#readme",
	"bugs": {
		"url": "https://github.com/trestleinc/bridge/issues"
	},
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/trestleinc/bridge.git"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"src"
	],
	"type": "module",
	"main": "./dist/shared/index.js",
	"module": "./dist/shared/index.js",
	"types": "./dist/shared/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/shared/index.d.ts",
				"default": "./dist/shared/index.js"
			}
		},
		"./package.json": "./package.json",
		"./client": {
			"import": {
				"types": "./dist/client/index.d.ts",
				"@convex-dev/component-source": "./src/client/index.ts",
				"default": "./dist/client/index.js"
			}
		},
		"./server": {
			"import": {
				"types": "./dist/server/index.d.ts",
				"default": "./dist/server/index.js"
			}
		},
		"./convex.config": {
			"import": {
				"types": "./dist/component/convex.config.d.ts",
				"@convex-dev/component-source": "./src/component/convex.config.ts",
				"default": "./dist/component/convex.config.js"
			}
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"clean": "rm -rf dist",
		"codegen": "convex codegen --component-dir ./src/component",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"dependencies": {
		"@effect/platform": "0.94.1",
		"@logtape/logtape": "2.0.0",
		"@logtape/pretty": "2.0.0",
		"convex-helpers": "0.1.111",
		"effect": "3.19.14"
	},
	"devDependencies": {
		"@convex-dev/eslint-plugin": "^1.1.1",
		"@edge-runtime/vm": "5.0.0",
		"@eslint/js": "^9.39.2",
		"@microsoft/api-extractor": "7.55.2",
		"@tanstack/db": "0.5.20",
		"@types/node": "25.0.9",
		"@types/sql.js": "1.4.9",
		"dotenv": "17.2.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"fake-indexeddb": "6.2.5",
		"globals": "^16.5.0",
		"lib0": "0.2.117",
		"prettier": "^3.7.4",
		"publint": "0.3.16",
		"tsdown": "0.20.0-beta.3",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.52.0",
		"yjs": "13.6.29",
		"zod": "4.3.5"
	},
	"peerDependencies": {
		"convex": "1.31.5"
	}
}
